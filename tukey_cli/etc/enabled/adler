            ]

[transformations:os-keypairs]
keypair:
     {"private_key" "$(keyMaterial)",
     "public_key" "",
     "fingerprint" "$(keyFingerprint)",
     "name" "$(keyName)"}

[enabled]
command: if [ '${adler/username}' = '$'{adler/username} ]; then
        false
    else
        true
    fi


[errors]
createKeypair:	result
launchVm:   result
